@model GoThere.ViewModels.EventFilterViewModel;

@{
    ViewData["Title"] = "Events";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Events" asp-action="Index">
    <p>
        Location Name: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
    <p>
        Type:
        <select asp-for="EventType" asp-items="Model.Types" class="mr-3">
            <option value="">All</option>
        </select>
        Occupation:
        <select asp-for="EventOccupation" asp-items="Model.Occupations" class="mr-3">
            <option value="">All</option>
        </select>
        Industry:
        <select asp-for="EventIndustry" asp-items="Model.Industries" class="mr-3">
            <option value="">All</option>
        </select>
        City:
        <select asp-for="EventCity" asp-items="Model.Cities" class="mr-3">
            <option value="">All</option>
        </select>
        Industry:
        <select asp-for="EventState" asp-items="Model.States" class="mr-3">
            <option value="">All</option>
        </select>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Occupation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Industry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Occupation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
